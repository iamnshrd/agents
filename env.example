# Polymarket Agents Configuration
# Copy this file to .env and fill in your actual values

# API Keys
OPENAI_API_KEY="your_openai_api_key_here"
POLYGON_WALLET_PRIVATE_KEY="your_polygon_wallet_private_key_here"

# Trading Configuration
TRADING_MODE="dry_run"  # Options: "dry_run", "live", "paper"
DRY_RUN_BALANCE=10000   # USDC balance for dry run mode (in cents)
MAX_POSITION_SIZE=0.1   # Maximum position size as fraction of total balance
RISK_PER_TRADE=0.02     # Risk per trade as fraction of total balance

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN="your_telegram_bot_token_here"
TELEGRAM_CHAT_ID="your_telegram_chat_id_here"
TELEGRAM_ALERTS_ENABLED=true
TELEGRAM_ALERT_TYPES="trade,position,risk,news"  # Comma-separated list

# RAG and Data Sources
NEWS_API_KEY="your_news_api_key_here"
CHROMA_DB_PATH="./local_db"
VECTOR_DB_ENABLED=true

# AI Model Configuration
DEFAULT_LLM_MODEL="gpt-3.5-turbo-16k"
LLM_TEMPERATURE=0.0
MAX_TOKENS=15000

# Risk Management
STOP_LOSS_PERCENTAGE=0.05
TAKE_PROFIT_PERCENTAGE=0.15
MAX_DAILY_TRADES=10
MAX_DAILY_LOSS=0.1

# Monitoring and Logging
LOG_LEVEL="INFO"
LOG_FILE="./logs/trading.log"
METRICS_ENABLED=true
PERFORMANCE_TRACKING=true

# Network Configuration
POLYGON_RPC_URL="https://polygon-rpc.com"
POLYMARKET_API_URL="https://gamma-api.polymarket.com"
REQUEST_TIMEOUT=30

# Development
DEBUG_MODE=false
ENVIRONMENT="development"  # Options: "development", "staging", "production"

# Tavily MCP Configuration
TAVILY_API_KEY="your_tavily_api_key_here"
TAVILY_MCP_SERVER_URL="https://mcp.tavily.com/mcp/"
TAVILY_SEARCH_DEPTH="basic"
TAVILY_MAX_RESULTS=10
TAVILY_INCLUDE_DOMAINS="polymarket.com,predictit.org,manifold.markets,reuters.com,bloomberg.com,cnbc.com,wsj.com"

# The Verge News MCP Configuration (via Smithery)
SMITHERY_API_KEY="970828f0-e3a7-4778-a72f-2cc44656511d"
VERGE_NEWS_MCP_URL="https://server.smithery.ai/@manimohans/verge-news-mcp/mcp"
